{
  "name": "avenox-typescript-examples",
  "version": "1.0.0",
  "description": "TypeScript examples for interacting with Avenox smart contracts on Sui",
  "type": "module",
  "scripts": {
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "build:frontend": "cd frontend && bun run build",
    "build:backend": "cd backend && bun run build",
    "install:all": "bun install && cd frontend && bun install && cd ../backend && bun install",
    "example:subscribe": "cd backend && bun run examples/subscription.ts",
    "example:deploy": "cd backend && bun run examples/deployment.ts",
    "example:payment": "cd backend && bun run examples/payment.ts"
  },
  "dependencies": {
    "@mysten/sui": "latest",
    "@mysten/dapp-kit": "latest",
    "@tanstack/react-query": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "typescript": "latest"
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}